<% layout('./layout/boilerplate') -%>


    <div class="container">
        <div class="row">
            <%for(let product of products){%>
                <div class="card col-4 mx-auto shadow bg-light-rounded" style="width: 19rem; margin: 10px; padding: 0;">
                    <img src="<%=product.img%>" class="card-img-top" alt="..." style="height : 180px">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=product.name%>
                        </h5>
                        <i class="fa fa-heart-o" id="like" style="position: relative; left: 90%; bottom: 25%" aria-hidden="true"></i>
                        <h5 class="card-text">Price :
                            <%=product.price%>
                        </h5>
                        <p class="card-text">
                            <%=product.decription%>
                        </p>
                        <a href="/products/<%=product._id%>" class="btn btn-primary">Show Product</a>
                        <a href="" class="btn btn-success">Buy</a>


                    </div>
                </div>
                <%}%>
        </div>
    </div>