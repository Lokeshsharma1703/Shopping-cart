<% layout('./layout/boilerplate') -%>


    <form class="mx-auto border p-3 w-50 mt-5" style="box-shadow: 0 0 10px gray; border-radius: 5px;" action="/products/<%= product._id %>?_method=PATCH" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Product Name" value="<%= product.name %>">
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Product Url</label>
            <input type="text" name="img" class="form-control" id="img" value="<%= product.img %>">
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Product Description</label>
            <textarea class="form-control" id="desc" name="description" rows="3"><%= product.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Price" value="<%= product.price %>">
        </div>


        <button class="btn btn-primary">Submit</button>
    </form>